.main
  .bb-custom-wrapper
    position relative
    width 100%
    height 100%
    padding-bottom 10px
    .bb-bookblock
      width 100%
      height 409px
      -webkit-perspective 2000px
      -moz-perspective 2000px
      -o-perspective 2000px
      -ms-perspective 2000px
      perspective 2000px
    .bb-custom-side
      float left
      width 50%
      height 100%
      border-left 1px dotted #ddd
    ul
      padding 0
      margin 0
      li
        list-style none
        padding 10px
        border-bottom 1px dotted #ddd
        cursor pointer
        &:hover
          box-shadow 0px 0px 10px 1px rgba( 255, 0, 0, .6 )
